@model IEnumerable<Data.Models.CardVGA>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Thêm</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Mã CardVGA</th>
            <th scope="col">Tên CardVGA</th>
            <th scope="col">Thông số</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
@foreach (var t in Model) {
            <tr class="table-primary">
                <th scope="row">@t.Ma</th>
                <td>@t.Ten</td>
                <td>@t.ThongSo</td>
            <td>
                    <a class="btn btn-outline-warning" asp-action="Update" asp-route-id="@t.Id">Cập nhật</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
