@model Data.Models.Image
@using Data.Models.ViewModels
@{
    ViewData["Title"] = "Create";
}

<h1>Thêm hình ảnh</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ma" class="control-label"></label>
                <input asp-for="Ma" class="form-control" />
                <span asp-validation-for="Ma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkImage" class="control-label"></label>
                <input type="file" name="imageFile" asp-for="LinkImage" class="form-control" />
                <span asp-validation-for="LinkImage" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="">Sản phẩm</label>
                <select class="form-select" name="maProductDetail">
                    @foreach (var t in (List<ProductDetailView>)ViewBag.listProductDetail)
                    {
                        <option>@t.Ma</option>
                    }

                </select>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a class="btn btn-outline-warning" asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
